# ==========================================================================
# KnowBrow shared environment template
# Copy to `.env` for local development, or use .env.dev/.env.prod templates.
# ==========================================================================

# ---- Domain / TLS (Caddy) ----
DOMAIN=localhost

# ---- PostgreSQL ----
POSTGRES_DB=sparql_db
POSTGRES_USER=user
POSTGRES_PASSWORD=CHANGEME_postgres

# ---- Django ----
DJANGO_SECRET_KEY=CHANGEME_django
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=https://localhost
DJANGO_CORS_ALLOWED_ORIGINS=https://localhost
DJANGO_SETTINGS_MODULE=sparql_app.settings_production

# ---- FastAPI ----
ALLOWED_ORIGINS=https://localhost
OXIGRAPH_SPARQL_URL=http://oxigraph:7878/query

# ---- Internal service auth ----
INTERNAL_API_KEY=CHANGEME_internal
DJANGO_USER=CHANGEME_service_user
DJANGO_PASSWORD=CHANGEME_service_password

# ---- Google OAuth (optional) ----
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# ---- OAuth frontend redirect ----
OAUTH_FRONTEND_REDIRECT_URL=http://localhost:3000
OAUTH_FRONTEND_REDIRECT_ALLOWLIST=http://localhost:3000
OAUTH_SET_REFRESH_COOKIE=True
OAUTH_INCLUDE_REFRESH_IN_FRAGMENT=False
OAUTH_REFRESH_COOKIE_SECURE=True

# ---- Django bootstrap superuser ----
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=CHANGEME_admin
